<div class="pages-management">
  <h2>Pages Management</h2>
  
  <p><%= link_to 'New Page', new_admin_page_path %></p>
  
  <table class="management-table">
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page| %>
    <tr>
      <td><%= page.title %></td>
      <td><%= page.status %></td>
      <td>
        <%= link_to 'Edit', edit_admin_page_path(page) %>
        <%= link_to 'Destroy', admin_page_path(page), :method => :delete %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
